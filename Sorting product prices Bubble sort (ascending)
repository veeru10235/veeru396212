#include <stdio.h>

int main() {
    int n, i, j;
    float a[100], t;

    printf("Enter number of products: ");
    scanf("%d", &n);

    printf("Enter %d prices:\n", n);
    for (i = 0; i < n; i++) scanf("%f", &a[i]);

    for (i = 0; i < n - 1; i++)
        for (j = 0; j < n - i - 1; j++)
            if (a[j] > a[j + 1]) { t = a[j]; a[j] = a[j + 1]; a[j + 1] = t; }

    printf("Sorted:\n");
    for (i = 0; i < n; i++) printf("%.2f ", a[i]);
    return 0;
}
